mixin breadcrumbs(arr, sep, cl)
	div(class= cl ? cl + ' breadcrumbs' : 'breadcrumbs', role="list")
		each item, index in arr
			if index === arr.length - 1
				a.breadcrumbs__item.breadcrumbs__item--current(role="listitem")= item.text
			else
				a.breadcrumbs__item(href= item.url, role="listitem")= item.text
				span.breadcrumbs__separator= sep
