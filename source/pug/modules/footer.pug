footer.footer
	.footer__inner.container
		+logo(isHome, 'footer__logo')
		.footer__contacts
			a.footer__phone.bordered-link.bordered-link--large(href="tel:+79268444410") +7 (926) 844-44-10
			.footer__worktime.worktime Понедельник — Суббота с 09-00 до 18-00
			address.footer__address.address Московская область, <br>Раменское, Дорожный проезд, д. 11
			a.footer__email.bordered-link(href="mailto:info@rammp.ru") info@rammp.ru

		ul.footer__menu
			each item in FOOTER_MENU
				if item.currentSection === currentSection && item.currentPage === currentPage
					li.footer__menu-item.footer__menu-item--current
						a.footer__menu-link= item.text
				else if item.currentSection === currentSection && item.currentPage !== currentPage
					li.footer__menu-item.footer__menu-item--current
						a.footer__menu-link(href= item.url)= item.text
				else
					li.footer__menu-item
						a.footer__menu-link(href= item.url)= item.text
